{
  "manifest_version": 3,
  "name": "Alex's BetterNow",
  "version": "2.5.2",
  "icons": {
    "16": "icons/favicon-1.png",
    "48": "icons/favicon-2.png",
    "128": "icons/favicon-3.png"
  },
  "description": "Adds visual enhancements and quality-of-life improvements to your streaming experience.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://www.younow.com/*", "https://younow.com/*"],
      "js": [
        "js/features/filter-bypass/injector.js",
        "js/features/volume/volume-protection-injector.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": ["https://www.younow.com/*", "https://younow.com/*"],
      "css": ["styles.css"],
      "js": [
        "js/lib/firebase-app.js",
        "js/lib/firebase-firestore.js",
        "js/config.js",
        "js/helpers.js",
        "js/templates.js",
        "js/features/grid/grid.js",
        "js/features.js",
        "js/features/badges/badges.js",
        "js/features/chat/chat.js",
        "js/features/chest/chest.js",
        "js/features/explore/explore.js",
        "js/features/auto-claim/missions.js",
        "js/features/auto-claim/daily-streak.js",
        "js/features/volume/volume.js",
        "js/features/auto-confirm/auto-confirm.js",
        "js/firebase.js",
        "js/features/presence/presence.js",
        "js/features/active-users/active-users.js",
        "js/admin.js",
        "js/features/hide-ads/hide-ads.js",
        "js/script.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "js/features/filter-bypass/filter-bypass.js",
        "js/features/navigation/navigation-interceptor.js",
        "js/features/explore/ws-blocker.js",
        "js/features/volume/volume-protection.js"
      ],
      "matches": ["https://www.younow.com/*", "https://younow.com/*"]
    }
  ]
}